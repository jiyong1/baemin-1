extends layout.pug

block title
  title= "배달의 민족"
block append css
  link(rel='stylesheet' type='text/css' href='/stylesheets/index.css')
block content
  section.header My배민
  section.top
    img.banner(src='/images/banner_index.png')
    if(nickname === undefined)
      a(href='/signin')
        .login-wrap.rightArrow
          .avatar
            img(src='/images/avatar.png')
          div#loginText.login 로그인을 해주세요
    else 
      .login-wrap
        .avatar
          img(src='/images/avatar.png')
        div#loginText.login= nickname
        button#logout.logout
          svg(width="25" y="25" viewBox="0 0 20 20")
            path(d="M13.53,2.238c-0.389-0.164-0.844,0.017-1.01,0.41c-0.166,0.391,0.018,0.845,0.411,1.01c2.792,1.181,4.598,3.904,4.6,6.937c0,4.152-3.378,7.529-7.53,7.529c-4.151,0-7.529-3.377-7.529-7.529C2.469,7.591,4.251,4.878,7.01,3.683C7.401,3.515,7.58,3.06,7.412,2.67c-0.17-0.392-0.624-0.571-1.014-0.402c-3.325,1.44-5.472,4.708-5.47,8.327c0,5.002,4.069,9.071,9.071,9.071c5.003,0,9.073-4.07,9.073-9.071C19.07,6.939,16.895,3.659,13.53,2.238z")
            path(d="M9.999,7.616c0.426,0,0.771-0.345,0.771-0.771v-5.74c0-0.426-0.345-0.771-0.771-0.771c-0.427,0-0.771,0.345-0.771,0.771v5.74C9.228,7.271,9.573,7.616,9.999,7.616z")
    .icons
      ul
        - const items = [{src:'/images/point.png', text:'포인트'},{src:'/images/coupon.png', text:'쿠폰함'},{src:'/images/present.png', text:'선물함'},{src:'/images/cart.png', text:'찜'},{src:'/images/order.png', text:'주문내역'},{src:'/images/review.png', text:'리뷰관리'}];
        each item in items
          li.icon-wrap
            div
              img.icon(src=item.src)
            .icon-name= item.text
  section.baemingreen
    div
      img.sprout(src='/images/sprout.png')
    .green-text.rightArrow 일회용품 덜 쓰기, 함께해요!
  section.botton
    - const bottons = [{new:true, text:'배민페이 등록', subText:'배민페이로 결제하면 최대 5.5% 배민포인트가 적립됩니다!'},{new:true, text:'가족계정 관리', subText:'결제수단을 공유해 우리가족의 끼니를 챙겨주세요.'},{new:false, text:'공지사항'},{new:false, text:'배민커넥트 지원'},{new:false, text:'이벤트'},{new:false, text:'고객센터'},{new:false, text:'환경설정'},{new:false, text:'약관 및 정책'}];
    each btn in bottons
      .buttonWrap.rightArrow
        if btn.new
          .title.new= btn.text
        else
          .title= btn.text
        if btn.subText
          .sub-text= btn.subText
    .buttonWrap
      .title 현재 버전 11.1.1
  section.footer
    .copyright Copyright Woowa Bothers in Song-pz, All Rights Reserved.
block script
  script(src="/scripts/main.js") 